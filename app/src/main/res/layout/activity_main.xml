<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvNumber2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sheroz.mydemocalci.MainActivity">


    <TextView
        android:id="@+id/tvNumber1"
        android:layout_width="@android:dimen/thumbnail_height"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginTop="68dp"
        android:text="Number1"
        android:textSize="30sp"
        tools:text="Number1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_below="@+id/editText5"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="21dp"
        android:text="Number2"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etEnterNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etEnterNum1"
        android:layout_alignStart="@+id/etEnterNum1"
        android:layout_below="@+id/tvNumber1"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etEnterNum1"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="+"
        android:onClick="doAdd"/>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/tvNumber1"
        android:layout_toRightOf="@+id/tvNumber1"
        android:text="-"
        android:onClick="doSub"
        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textSize="30sp" />

</RelativeLayout>

